{
  "name": "@moonx/contracts",
  "version": "1.0.0",
  "description": "MoonXFarm Router Smart Contracts - Diamond Proxy with Multi-Aggregator Support",
  "private": true,
  "scripts": {
    "install": "forge install && npm install",
    "clean": "forge clean && hardhat clean",
    "build": "forge build && hardhat compile",
    "build:hardhat": "hardhat compile",
    "build:foundry": "forge build",
    "test": "forge test && hardhat test",
    "test:hardhat": "hardhat test",
    "test:foundry": "forge test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "forge coverage",
    "format": "forge fmt",
    "lint": "forge fmt --check",
    "fork:mainnet": "anvil --fork-url https://eth-mainnet.g.alchemy.com/v2/UphfhralOCYNjg3BnpFIG",
    "fork-base": "anvil --fork-url https://base-mainnet.g.alchemy.com/v2/UphfhralOCYNjg3BnpFIG --port 8645",
    "fork-zora": "anvil --fork-url https://zora-mainnet.g.alchemy.com/v2/UphfhralOCYNjg3BnpFIG",
    "fork-base-sepolia": "anvil --fork-url https://sepolia.base.org",
    "node": "hardhat node",
    "node-fork": "hardhat node --fork https://mainnet.base.org",
    "coverage": "hardhat coverage",
    "size": "hardhat size-contracts",
    "predeploy": "npm run build",
    "deploy:local": "./script/deploy.sh --network local",
    "deploy:base-local": "./script/deploy.sh --network base-local",
    "deploy:mainnet-local": "./script/deploy.sh --network mainnet-local",
    "deploy:mainnet": "./script/deploy.sh --network mainnet",
    "deploy:base-sepolia": "./script/deploy.sh --network base-sepolia",
    "deploy:base": "./script/deploy.sh --network base",
    "deploy:bsc": "./script/deploy.sh --network bsc",
    "deploy:zora": "./script/deploy.sh --network zora",
    "deploy:dry-run": "./script/deploy.sh --network local --dry-run",
    "deploy:no-verify": "./script/deploy.sh --network base-sepolia --no-verify",
    "add-facets": "bash script/add-aggregator-facets.sh",
    "facet": "./script/facet-manager.sh",
    "docs:facet": "cat FACET_MANAGEMENT.md",
    "docs:quick": "cat QUICK_REFERENCE.md",
    "demo:quote": "node src/demo/demo-swap.js quote",
    "demo:swap": "node src/demo/demo-swap.js swap",
    "demo:help": "node src/demo/demo-swap.js help",
    "demo:setup": "npm install ethers && echo 'Edit src/demo/demo-swap.js CONFIG section with your values'",
    "docs:swap": "cat src/demo/README.md",
    "help": "echo 'ðŸ”§ MoonXFarm Contracts\n\nDeployment:\n  npm run deploy:base-sepolia   - Deploy to Base testnet\n  npm run deploy:base           - Deploy to Base mainnet\n  npm run deploy:bsc            - Deploy to BSC mainnet\n  npm run deploy:dry-run        - Test deployment\n\nFacet Management:\n  npm run facet help            - Facet management commands\n\nDemo:\n  npm run demo:setup            - Setup swap demo\n  npm run demo:quote            - Get quote only\n  npm run demo:swap             - Execute swap\n\nDocs:\n  npm run docs:quick            - Quick reference\n  npm run setup                 - Setup .env file'",
    "setup": "cp deployment.env.example .env && echo 'Please configure your .env file with proper values'",
    "status": "cat DEPLOYMENT_STATUS.md"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "smart-contracts",
    "diamond-proxy",
    "dex",
    "aggregator",
    "defi"
  ],
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "@uniswap/permit2-sdk": "^1.3.1",
    "@uniswap/universal-router": "^2.0.0",
    "@uniswap/v4-core": "^1.0.2",
    "@uniswap/v4-periphery": "^1.0.2",
    "solady": "^0.1.24"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@typechain/ethers-v5": "^11.1.2",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.0.0",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.7.2",
    "hardhat": "^2.19.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "typechain": "^8.3.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
